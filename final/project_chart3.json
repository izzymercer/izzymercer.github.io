{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Levels",
    "subtitle": "A base map of Africa",
    "anchor": "start",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10
  },
  "width": 400,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/viniciusparede/world-map-geojson/main/africa.json",
    "format": {"property": "features"}
  },
  "projection": {"type": "mercator"},
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/izzymercer/izzymercer.github.io/main/data.chart3.csv"
        },
        "key": "Country",
        "fields": ["Value"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "darkgrey", "strokeWidth": 0.5},
  "encoding": {
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {
        "field": "Value",
        "title": "Prevalence of moderate or severe food insecurity(3-year average)"
      }
    ],
    "color": {
      "field": "Value",
      "type": "quantitative",
      "title": "Prevalence of insecurity"
    }
  },
  "config": {}
}