{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {
    "text": "Regression of Agriculture, forestry, and fishing, value added (% of GDP) on GDP per capita",
    "subtitle": [
      "Log of GDP per capita (x) Agriculture value added (% of GDP) (y). 2020 data",
      "Source: World Bank."
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black",
    "subtitleColor": "black"
  },
  "height": 300,
  "width": 300,
  "config": {"axis": {"grid": true, "gridColor": "#FFFFFF"}},
  "data": {
    "url": "https://raw.githubusercontent.com/izzymercer/izzymercer.github.io/main/final/chart4_data1.json",
    "format": {"type": "json"}
  },
  "layer": [
    {
      "selection": {
        "picked": {
          "empty": "none",
          "bind": {
            "Region": {
              "input": "select",
              "options": [
                "No Region selected",
                "Sub-Saharan Africa",
                "East Asia & Pacific",
                "Europe & Central Asia",
                "Latin America & Caribbean",
                "Middle East & North Africa",
                "North America"
              ],
              "name": "Select a Region: "
            }
          },
          "type": "single",
          "fields": ["Region"]
        },
        "grid": {
          "type": "interval",
          "bind": "scales",
          "on": "[mousedown, window:mouseup] > window:mousemove!",
          "translate": "[mousedown, window:mouseup] > window:mousemove!",
          "zoom": "wheel!",
          "resolve": "global"
        }
      },
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "color": {
          "value": "#e66a52",
          "condition": {
            "field": "Cluster",
            "selection": "picked",
            "type": "nominal",
            "legend": null
          }
        },
        "size": {
          "value": 70,
          "condition": {"value": 120, "selection": "picked"}
        },
        "opacity": {
          "value": 0.5,
          "condition": {"value": 1, "selection": "picked"}
        },
        "x": {
          "field": "log_GDP_pc",
          "scale": {"domain": [2.5, 5.5]},
          "type": "quantitative",
          "title": null,
          "axis": {
            "labelColor": "black",
            "titleColor": "black",
            "grid": false,
            "title": "Log of GDP per capita"
          }
        },
        "y": {
          "field": "AG",
          "scale": {"zero": false},
          "type": "quantitative",
          "axis": {
            "labelColor": "black",
            "titleColor": "black",
            "grid": false,
            "title": "Agriculture value added (% of GDP)"
          }
        },
        "tooltip": [
          {"field": "Region", "type": "nominal", "title": "Region"},
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {"field": "log_GDP_pc", "type": "nominal", "title": "GDP per Capita"},
          {
            "field": "AG",
            "type": "nominal",
            "title": "Agriculture value added (% of GDP)"
          }
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "#13bee0", "size": 3},
      "transform": [{"regression": "AG", "on": "log_GDP_pc"}],
      "encoding": {
        "x": {"field": "log_GDP_pc", "type": "quantitative"},
        "y": {"field": "AG", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {"regression": "AG", "on": "log_GDP_pc", "params": true},
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "#1a7feb",
        "x": 200,
        "align": "center",
        "y": 20,
        "size": 15
      },
      "encoding": {"text": {"type": "nominal", "field": "R2"}}
    }
  ]
}